
@{
    ViewBag.Title = "OperacionRealizada";
}

<h2>OperacionRealizada</h2>

@{
    var x = Session["NumeroTarjeta"];
    var Balance = Session["Balance"];
    var OldBalance = Session["OldBalance"];

}

<div>
    <p id="NumeroTarjetaP">Se retiro de la cuenta @x.ToString()</p>

    <div>
        <p>Su balance previo era de </p>
        <p style="color: red; font-size: 20px; ">@OldBalance.ToString()</p>

    </div>

    <div>
        <p>Su balance actual es de </p>
        <p style="color: red; font-size: 20px; ">@Balance.ToString()</p>

    </div>




</div>

<div class="jumbotron" id="Salirdiv">
    @using (Html.BeginForm("Salir", "Home", FormMethod.Post))
    {
        <form action="/Salir" method="post">
            <button type="submit">Salir</button>
        </form>
    }
    @using (Html.BeginForm("Operaciones", "Home", FormMethod.Post))
    {
        <form action="/Operaciones" method="post">
            <button type="submit">Atras</button>
        </form>
    }
</div>